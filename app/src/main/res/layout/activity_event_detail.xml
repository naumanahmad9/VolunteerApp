<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EventDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/event_detail_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/karachi_volunteer_1" />

                <TextView
                    android:id="@+id/event_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_detail_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="4dp"
                    android:text="Karachi Literature Festival"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cardview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_detail_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="30dp"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textAlignment="center">

                        <ImageView
                            android:id="@+id/location_icon"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="12dp"
                            android:src="@drawable/ic_place_orange" />

                        <TextView
                            android:id="@+id/event_detail_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="12dp"
                            android:layout_toRightOf="@id/location_icon"
                            android:text="Karachi, Pakistan"
                            android:textSize="22sp" />

                        <ImageView
                            android:id="@+id/date_icon"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_below="@id/location_icon"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="12dp"
                            android:src="@drawable/ic_date_range_orange" />

                        <TextView
                            android:id="@+id/event_detail_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/event_detail_location"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginBottom="12dp"
                            android:layout_toRightOf="@id/location_icon"
                            android:text="10 October, 5:00 PM"
                            android:textSize="22sp" />

                        <ImageView
                            android:id="@+id/money_icon"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_below="@id/date_icon"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="12dp"
                            android:src="@drawable/ic_money_orange" />

                        <TextView
                            android:id="@+id/event_detail_stipend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/event_detail_date"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:layout_toRightOf="@id/location_icon"
                            android:text="1000"
                            android:textSize="22sp" />

                        <ImageView
                            android:id="@+id/category_icon"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_below="@id/money_icon"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="30dp"
                            android:src="@drawable/ic_category_orange" />

                        <TextView
                            android:id="@+id/event_detail_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/event_detail_stipend"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            android:layout_toRightOf="@id/location_icon"
                            android:text="Education"
                            android:textSize="22sp" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cardview1"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="10dp"
                    android:text="Description"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/event_detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview1"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="18dp"
                    android:text="Karachi Literature Festival is an annual international literary festival held in Karachi, Pakistan. It is the first festival of its kind in the country. "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_detail_description"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="18dp"
                    android:text="Medium of Language: "
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/event_detail_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textview2"
                    android:layout_below="@id/event_detail_description"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="18dp"
                    android:text="Urdu and English"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview2"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="18dp"
                    android:text="Dress Code: "
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/event_detail_dress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textview3"
                    android:layout_below="@id/textview2"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="18dp"
                    android:text="Semi Formal"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/textview4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview3"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="18dp"
                    android:text="Refreshments: "
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/event_detail_refreshments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textview4"
                    android:layout_below="@id/textview3"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="15dp"
                    android:text="Snacks and drinks"
                    android:textSize="18sp"
                    />

                <RatingBar
                    android:id="@+id/event_detail_ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview4"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_centerHorizontal="true"
                    android:progressTint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/textview5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_detail_ratingbar"
                    android:text="Comments"
                    android:textSize="22sp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    />
                <ListView
                    android:id="@+id/event_detail_comments_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview5"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="50dp"
                    />

            </RelativeLayout>
        </ScrollView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:text="Apply"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>