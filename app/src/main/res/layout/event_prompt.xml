<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ececec" >

    <TextView
        android:id="@+id/event_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_detail_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="4dp"
        android:text="Karachi Literature Festival"
        android:textSize="26sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_detail_title"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="center">

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_place_orange" />

            <TextView
                android:id="@+id/event_detail_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"
                android:layout_toRightOf="@id/location_icon"
                android:text="Karachi, Pakistan"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/date_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@id/location_icon"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_date_range_orange" />

            <TextView
                android:id="@+id/event_detail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_detail_location"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="12dp"
                android:layout_toRightOf="@id/location_icon"
                android:text="10 October, 5:00 PM"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/money_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@id/date_icon"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_money_orange" />

            <TextView
                android:id="@+id/event_detail_stipend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_detail_date"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_toRightOf="@id/location_icon"
                android:text="1000"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/category_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@id/money_icon"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/ic_category_orange" />

            <TextView
                android:id="@+id/event_detail_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_detail_stipend"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/location_icon"
                android:text="Education"
                android:textSize="22sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/cardview1"
    android:layout_centerHorizontal="true"
    android:padding="20dp"
    >


    <ImageView
        android:id="@+id/prompt_close"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/close_icon"
        />

    <ImageView
        android:id="@+id/prompt_done"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/prompt_close"
        android:layout_marginStart="70dp"
        android:src="@drawable/done_icon"
        />


</RelativeLayout>
</RelativeLayout>